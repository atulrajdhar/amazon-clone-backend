{
  "name": "amazon-clone-backend",
  "version": "1.0.0",
  "description": "amazon clone backend using MERN stack",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "mocha --require babel-polyfill --require @babel/register --recursive --exit",
    "test:api:users": "mocha --require babel-polyfill --require @babel/register --watch ./test/api/users/post.js ./controllers/users.mjs --timeout 10000",
    "start": "npm run server",
    "server": "node --experimental-modules server.mjs",
    "transpile": "babel ./ --ignore node_modules --out-dir dist-server",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile"
  },
  "author": "asr",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "gridfs-stream": "^1.1.1",
    "mongoose": "^5.10.9",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "pusher": "^3.0.1",
    "security": "file:../helpers/security",
    "stripe": "^8.114.0",
    "validators": "file:../helpers/validators"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/register": "^7.12.1",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "mocha": "^8.2.0",
    "mongodb-memory-server": "^6.9.2",
    "rimraf": "^3.0.2"
  }
}
